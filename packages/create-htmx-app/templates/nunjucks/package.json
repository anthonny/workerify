{
  "name": "workerify-nunjucks-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run watch:templates\"",
    "dev:vite": "vite",
    "watch:templates": "chokidar \"src/templates/**/*.njk\" -c \"npm run prebuild\"",
    "prebuild": "nunjucks-precompile src/templates --include njk --wrapper es6 > src/templates/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "npm run prebuild"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@workerify/vite-plugin": "latest",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "nunjucks-es6": "file:nunjucks-es6",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.6"
  },
  "dependencies": {
    "@workerify/lib": "latest",
    "htmx.org": "^2.0.7",
    "nunjucks": "^3.2.4"
  }
}
