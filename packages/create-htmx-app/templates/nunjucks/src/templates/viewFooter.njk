<div class="flex justify-between items-center px-4 py-2 bg-gray-800 text-white">
  <div>{{ activeCount }} {% if activeCount == 1 %}item{% else %}items{% endif %} left</div>
  <div>
    <ul class="flex text-gray-600 gap-2">
      <li class="cursor-pointer {% if filter == 'all' %}text-white{% endif %}" hx-get="/api/todos?filter=all" hx-target="#todos" hx-swap="outerHTML">All</li>
      <li class="cursor-pointer {% if filter == 'unchecked' %}text-white{% endif %}" hx-get="/api/todos?filter=unchecked" hx-target="#todos" hx-swap="outerHTML">Active</li>
      <li class="cursor-pointer {% if filter == 'checked' %}text-white{% endif %}" hx-get="/api/todos?filter=checked" hx-target="#todos" hx-swap="outerHTML">Completed</li>
    </ul>
  </div>
</div>
