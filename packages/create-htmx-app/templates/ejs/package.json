{
  "name": "workerify-ejs-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run watch:templates\"",
    "dev:vite": "vite",
    "watch:templates": "chokidar \"src/templates/**/*.ejs\" -c \"npm run prebuild\"",
    "prebuild": "node scripts/compile-templates.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "npm run prebuild"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/ejs": "^3.1.5",
    "@workerify/vite-plugin": "latest",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.6"
  },
  "dependencies": {
    "@workerify/lib": "latest",
    "ejs": "^3.1.10",
    "htmx.org": "^2.0.7"
  }
}