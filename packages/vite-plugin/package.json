{
  "name": "@workerify/vite-plugin",
  "version": "0.1.3",
  "description": "Vite plugin for workerify",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./client.d.ts"
    }
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonny/workerify.git",
    "directory": "packages/vite-plugin"
  },
  "scripts": {
    "prebuild": "node scripts/build-templates.js",
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "npm run prebuild && vite build --watch",
    "clean": "rm -rf dist src/generated",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "typecheck": "npm run prebuild && tsc --noEmit",
    "pretest": "npm run prebuild",
    "test": "vitest run",
    "test:watch": "npm run prebuild && vitest --watch",
    "test:ui": "npm run prebuild && vitest --ui",
    "test:coverage": "npm run prebuild && vitest --coverage"
  },
  "keywords": [
    "service-worker",
    "router",
    "vite",
    "web-workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/serviceworker": "^0.0.153",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "typescript": "^5.9.2",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  }
}
